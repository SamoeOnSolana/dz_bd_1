@page
@model App1.Pages.Dishes1.IndexModel
@{
    ViewData["Title"] = "Страви";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Страви</h1>

    <form method="get" class="mb-6 bg-white p-4 rounded-lg shadow">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <select name="CategoryFilter" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                    <option value="">Всі категорії</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(Model.CategoryFilter == category.Id)">@category.Name</option>
                    }
                </select>
            </div>
            <div>
                <button type="submit" class="w-full bg-purple-500 text-white px-4 py-2 rounded hover:bg-purple-600">Фільтр</button>
            </div>
        </div>
    </form>

    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Назва</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ціна</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ресторан</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Категорії</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var dish in Model.Dishes)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@dish.Id</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@dish.Title</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@dish.Price.ToString("C")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@dish.Restaurant.Name</td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            @string.Join(", ", dish.DishCategories.Select(dc => dc.Category.Name))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
